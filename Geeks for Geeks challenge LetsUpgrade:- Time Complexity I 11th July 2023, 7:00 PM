5.> Second Largest
class Solution {
    int print2largest(int arr[], int n) {
        // code here
        if(n<=1)
        return -1;
        int max1=Integer.MIN_VALUE;
        int max2=Integer.MIN_VALUE;
        for(int i=0;i<n;i++){
            max1=Math.max(max1,arr[i]);
        }
        for(int i=0;i<n;i++){
            if(arr[i]!=max1){
                max2=Math.max(max2,arr[i]);
            }
        }
        if(max2==(Integer.MIN_VALUE))
            return -1;
        return max2; 
    }
}
------------------------------------------------------------------------------------------------
6.> Max Min
public class Solution {
    public int solve(int[] A) {
      int n = A.length;
        int min = A[0], max = A[0];
        for(int i = 0;i < n;i++) {
            if(A[i] > max) {
                max = A[i];
            } else {
                if(A[i] < min) 
                    min = A[i];
            }
        }
        return max + min;
    }
}
