1.> Largest Element in Array

class Compute {
    
    public int largest(int arr[], int n)
    {
          int max_no = arr[0];
        for (int i = 1; i < n; i++)
        {
            if (arr[i] > max_no)
            {
                max_no = arr[i];
            }
        }
        return max_no;
    }
}
-------------------------------------------------------------------------------------------------------

2.> Find minimum and maximum element in an array

class Compute 
{
    static pair getMinMax(long a[], long n)  
    {
        //Write your code here
        long max=a[0];
        long min=a[0];
        for(int i=1 ;i<n;i++){
            if(a[i]>max)
            max=a[i];
        }
        for(int j=1 ;j<n;j++){
           if(a[j]<min)
            min=a[j];
        }
         pair p = new pair(min,max);
        return p;
        
    }
}
